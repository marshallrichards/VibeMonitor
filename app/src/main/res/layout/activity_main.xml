<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/rms_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RMS: Waiting for data..."
        android:textSize="24sp" />

    <TextView
        android:id="@+id/status_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Initializing..."
        android:textSize="18sp" />

    <EditText
        android:id="@+id/webhook_url_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Webhook URL" />

    <Button
        android:id="@+id/save_url_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save URL" />

    <Button
        android:id="@+id/set_baseline_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Baseline (Dryer Off)" />

    <Button
        android:id="@+id/set_threshold_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Threshold (Dryer On)" />

</LinearLayout>
